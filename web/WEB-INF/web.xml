    <servlet-mapping>
        <servlet-name>BuscarNombreTipo</servlet-name>
        <url-pattern>/buscarnombretipo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DevolverSolicitudesPendientes</servlet-name>
        <url-pattern>/devolversolicitudespendientes</url-pattern>
