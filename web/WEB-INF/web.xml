    <servlet-mapping>
        <servlet-name>AltaGrupoServlet</servlet-name>
        <url-pattern>/altagrupo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarMensajes</servlet-name>
        <url-pattern>/guardarmensajes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarPosicionUsuarioServlet</servlet-name>
        <url-pattern>/actualizarposicionusuarioservlet</url-pattern>
    </servlet-mapping>
